# Jellyfin Helper RO — Environment Configuration
# Copy this file to .env and fill in your values

# Required — TMDB API key (https://www.themoviedb.org/settings/api)
TMDB_API_KEY=your_tmdb_api_key_here

# Required — Jellyfin server
JELLYFIN_URL=http://your-jellyfin-ip:8096
JELLYFIN_API_KEY=your_jellyfin_api_key_here

# Language (hardcoded to ro-RO in config.py, but can override)
# TMDB_LANGUAGE=ro-RO

# Logging verbosity: DEBUG, INFO, WARNING, ERROR
# LOG_LEVEL=INFO
